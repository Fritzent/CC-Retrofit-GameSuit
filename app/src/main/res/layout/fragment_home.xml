<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#B6DBEA"
    tools:context=".home.HomeFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/close"
            android:src="@drawable/ic_close"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="24dp"
            android:layout_width="32dp"
            android:layout_height="32dp"/>

        <TextView
            android:id="@+id/tv_hal_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="32sp"
            android:text="Pilih Lawanmu"
            android:layout_marginTop="64dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <ImageView
            android:id="@+id/iv_hal_1"
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:src="@drawable/landing1"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_hal_1"/>

        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pemain vs Pemain"
            app:layout_constraintStart_toStartOf="@id/iv_hal_1"
            app:layout_constraintEnd_toEndOf="@id/iv_hal_1"
            app:layout_constraintTop_toBottomOf="@id/iv_hal_1" />



        <ImageView
            android:id="@+id/iv_hal_2"
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:src="@drawable/landing2"
            android:layout_marginTop="32dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/username" />

        <TextView
            android:id="@+id/username2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pemain vs CPU"
            app:layout_constraintStart_toStartOf="@id/iv_hal_2"
            app:layout_constraintEnd_toEndOf="@id/iv_hal_2"
            app:layout_constraintTop_toBottomOf="@id/iv_hal_2" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>